<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    android:elevation="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/laptop_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/baseline_10k_24"/>

        <TextView
            android:id="@+id/laptop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/laptop_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="sgsldfjgslfkjg"/>

        <TextView
            android:id="@+id/laptop_ram_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="49"
            app:layout_constraintTop_toBottomOf="@id/laptop_name"
            app:layout_constraintStart_toStartOf="@id/laptop_name"/>

        <TextView
            android:id="@+id/laptop_display_resolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="49"
            app:layout_constraintTop_toBottomOf="@id/laptop_ram_size"
            app:layout_constraintStart_toStartOf="@id/laptop_ram_size"/>

        <TextView
            android:id="@+id/laptop_storage_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="49"
            app:layout_constraintTop_toBottomOf="@id/laptop_display_resolution"
            app:layout_constraintStart_toStartOf="@id/laptop_display_resolution"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>